<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="memoryList.Views.NewOtherPage"
             Title="NUEVO OTRO"
             BackgroundColor="{DynamicResource PageColor}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="CANCELAR" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="GUARDAR" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15,40,15,15">
            <Label Text="Agrega otro a la lista" TextColor="{DynamicResource TextColor}" FontSize="Medium" />
            <Entry Text="{Binding Other.Text}" Placeholder=" Otro" PlaceholderColor="{DynamicResource TextColor}" FontSize="Small" TextColor="{DynamicResource TextColor}"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
